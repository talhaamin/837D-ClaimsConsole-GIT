@model HIPPAWeb.Pages.List.MessageListModel

@{
    ViewData["Title"] = "MessageList";

}
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Messages</h3>

        <div class="card-tools">
            <form asp-page-handler="post" method="post" name="form1">
                Load Private: <input onclick="document.form1.submit();" type="checkbox" asp-for="IsPrivate" name="IsPrivate" class="btn btn-warning">
            </form>
            <a asp-page="/prototype" asp-route-id="-1" class="btn btn-warning">Create New</a>
            @*<button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>*@

        </div>
    </div>
    
    <!-- /.card-header -->
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">

              @*  <h1>MessageList</h1>*@
@*
                <p>
                   
                    
                </p>*@
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Message[0].UserId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Message[0].TestScenarioName)
                            </th>
                          @*  <th>
                                @Html.DisplayNameFor(model => model.Message[0].MessageXml)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Message[0].MessageText)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Message[0].IsPrivate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Message[0].IsActive)
                            </th>
                          *@  <th>
                                @Html.DisplayNameFor(model => model.Message[0].CreatedDate)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Message != null)
                        {
                            @foreach (var item in Model.Message)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TestScenarioName)
                                    </td>
                                   @* <td>
                                        @Html.DisplayFor(modelItem => item.MessageXml)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MessageText)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IsPrivate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IsActive)
                                    </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreatedDate)
                                    </td>
                                    <td>

                                        <a asp-page="/prototype" asp-route-id="@item.MessageId" class="btn btn-primary">Edit</a>|
                                        <a type="button" onclick="return confirm('Are you sure you want to delete?');" asp-route-id="@item.MessageId" asp-page-handler="Delete" class="btn btn-primary">Delete</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
   
</div>
<!-- /.card -->